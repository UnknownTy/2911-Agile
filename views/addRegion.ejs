<div class="content">
    <h1>Add Restriction</h1>
    <!-- <% if (typeof updated !== 'undefined') { %>
        <h3>Values for <%=region.name%> has been updated!</h3>
    <% } %> -->
    <form action="/region/add" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <textarea readonly id="name" name="name"></textarea>
        </div>

        <div class="form-group">
            <label for="resDesc">Restaurant Dining</label>
            <textarea id="resDesc" name="resDesc"></textarea>
        </div>

        <div class="form-group">
            <label for="indDesc">Indoor Gatherings</label>
            <textarea id="indDesc" name="indDesc"></textarea>
        </div> 

        <div class="form-group">
            <label for="outDesc">Outdoor Gatherings</label>
            <textarea id="outDesc" name="outDesc"></textarea>
        </div>

        <div class="form-group">
            <label for="maskDesc">Masks</label>
            <textarea id="maskDesc" name="maskDesc"></textarea>
        </div>

        <div class="form-group">
            <label for="Link">Link</label>
            <textarea id="link" name="link"></textarea>
        </div> 

        <button type="submit" class="submit-button">Submit!</button>
    </form>
</div>